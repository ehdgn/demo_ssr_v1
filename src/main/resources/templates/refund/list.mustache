{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header mb-0">
            <h4><b>환불 요청 내역(사용자)</b></h4>
        </div>

        <!-- 외부 카드 -->
        <div class="card-body">

            <!-- 내부 카드 (card-body) -->
            {{#refundList}}
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">

                            <div class="flex-grow-1">

                                <h5 class="card-title mb-2">
                                    환불요청#{{id}}
                                </h5>
                                <p class="text-muted mb-2">
                                    <i class="fa-solid fa-receipt"></i> 결제 ID: {{paymentId}}
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fa-solid fa-won-sign"></i> 환불금액: {{amount}} P
                                </p>
                                {{#isPending}}
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-comment"></i> 환불사유: {{reason}}
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-circle-info"></i> 상태: <span
                                            class="badge bg-warning">{{statusDisplay}}</span>
                                    </p>

                                {{/isPending}}
                                {{#isApproved}}
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-comment"></i> 환불사유: {{reason}}
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-circle-info"></i> 상태: <span
                                            class="badge bg-success">{{statusDisplay}}</span>
                                    </p>
                                {{/isApproved}}
                                {{#isRejected}}
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-comment"></i> 거절사유: <span
                                            class="text-danger">{{rejectReason}}</span>
                                    </p>
                                    <p class="text-muted mb-2">
                                        <i class="fa-solid fa-circle-info"></i> 상태: <span
                                            class="badge bg-danger">{{statusDisplay}}</span>
                                    </p>
                                {{/isRejected}}

                            </div>
                        </div>
                    </div>
                </div>
            {{/refundList}}
            <div class="mt-4">
                <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
            </div>

            {{^refundList}}
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h5>환불 요청 내역이 없습니다.</h5>
                </div>

                <div class="mt-4">
                    <a href="/user/detail" class="btn btn-secondary">회원정보로 돌아가기</a>
                </div>
            {{/refundList}}

        </div>

    </div>
</div>

{{> layout/footer}}